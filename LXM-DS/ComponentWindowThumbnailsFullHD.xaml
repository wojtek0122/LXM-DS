<Window x:Class="LXM_DS.ComponentWindowThumbnailsFullHD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LXM_DS"
        mc:Ignorable="d"
        Title="ComponentWindowThumbnailsFullHD"
        Height="1080" Width="1920"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <!-- Left Button -->
        <Button x:Name="btnLeft" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" VerticalAlignment="Center" HorizontalAlignment="Left" Background="White" Margin="10" Width="64" Height="64" Click="btnLeft_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="FILES\Left.png" />
            </StackPanel>
        </Button>
        <!-- Right Button -->
        <Button x:Name="btnRight" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" VerticalAlignment="Center" HorizontalAlignment="Right" Background="White" Margin="10" Width="64" Height="64" Click="btnRight_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="FILES\Right.png" />
            </StackPanel>
        </Button>
        
        <Rectangle Fill="#b9192c" HorizontalAlignment="Left" Height="40" Margin="0,1040,0,0" VerticalAlignment="Top" Width="1920"/>
        <Label x:Name="lblMT" Content="4063" FontFamily="Oxygen" FontSize="16" FontStyle="Normal" Foreground="white" HorizontalAlignment="Center" Height="40" Margin="0,1045,0,0" />
        
        <Grid x:Name="grdThumbnails" Height="1030" VerticalAlignment="Top" Width="1752">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="292" />
                <ColumnDefinition Width="292" />
                <ColumnDefinition Width="292" />
                <ColumnDefinition Width="292" />
                <ColumnDefinition Width="292" />
                <ColumnDefinition Width="292" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="206" />
                <RowDefinition Height="206" />
                <RowDefinition Height="206" />
                <RowDefinition Height="206" />
                <RowDefinition Height="206" />
            </Grid.RowDefinitions>
            <!-- Buttons -->

            

            <!-- Buttons -->
        </Grid>
    </Grid>
</Window>
